<div class="container"> 
  <div class="row">  
  	<h3>Albums (<%= @artists.albums.count %>)</h3>
    <h1><%= @artists["name"] %></h1>
    <img src=<%= @artists["image_url"] %> alt="...">
       
  	   <% @albums.each do |album|	%>
	  		<div class="col-sm-6 col-md-4">  		   
	  		   <div class="thumbnail">
	  		     <img src=<%= album.image_url %> alt="...">
	  		     <div class="caption">    		    		      
	  		       <h3><%= album.name %></h3>  		       		        	  		        
	  		     </div>
	  		   </div>  		   
	  		</div>
  		<% end %>  	
  </div>
</div>